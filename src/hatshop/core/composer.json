{
    "name": "hatshop/core",
    "description": "Core library for HatShop e-commerce application",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hatshop\\Core\\": ""
        },
        "files": [
            "bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Hatshop\\Core\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "smarty/smarty": "^5.0",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "test": "phpunit --configuration ../phpunit.xml",
        "test-coverage": "phpunit --configuration ../phpunit.xml --coverage-html ../coverage"
    }
}
