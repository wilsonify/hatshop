{
    "name": "hatshop/app",
    "description": "HatShop unified e-commerce application",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Hatshop\\App\\": "src/",
            "Hatshop\\App\\Presentation\\": "presentation/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../core"
        }
    ],
    "require": {
        "php": ">=8.1",
        "hatshop/core": "*",
        "smarty/smarty": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "test": "phpunit"
    }
}
